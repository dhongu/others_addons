<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base_setup.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <field name="company_id" position="before">
                <div id="discount">
                    <h2>Discount Configuration</h2>
                    <div class="row mt16 o_settings_container">
                        <div class="col-xs-12 col-md-6 o_setting_box">
                            <div class="o_setting_right_pane">
                                <div class="text-muted">
                                    Default Discount Product
                                </div>
                                <div class="content-group">
                                    <div class="mt16 row">
                                        <label for="sale_discount_product_id" class="col-xs-3 col-md-3 o_light_label"/>
                                        <field name="sale_discount_product_id" class="oe_inline"/>
                                    </div>
                                </div>
                                <div class="text-muted">
                                    Max Discount Percentage
                                </div>
                                <div class="content-group">
                                    <div class="mt16 row">
                                        <label for="discount_percentage_max" class="col-xs-3 col-md-3 o_light_label"/>
                                        <field name="discount_percentage_max" class="oe_inline"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </field>
       </field>
   </record>

</odoo>
