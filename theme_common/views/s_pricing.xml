<?xml version="1.0" encoding="utf-8" ?>
<openerp>
  <data>

    <template name="Pricing" id="s_pricing">
      <section class="s_pricing o_animation">
        <div class="container">
          <div class="row">
            <div class="col-md-12 text-center mt32 mb32">
