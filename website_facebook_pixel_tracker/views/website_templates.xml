<?xml version="1.0"?>
<odoo>

    <template id="facebook_pixel_code" inherit_id="portal.frontend_layout" name="Facebook Pixel Code">
        <xpath expr="//nav" position="before">
            <script t-if="website and website.facebook_pixel_code">
            !function(f,b,e,v,n,t,s)
            {if(f.fbq)return;n=f.fbq=function(){n.callMethod?
            n.callMethod.apply(n,arguments):n.queue.push(arguments)};
            if(!f._fbq)f._fbq=n;n.push=n;n.loaded=!0;n.version='2.0';
            n.queue=[];t=b.createElement(e);t.async=!0;
            t.src=v;s=b.getElementsByTagName(e)[0];
            s.parentNode.insertBefore(t,s)}(window, document,'script',
            'https://connect.facebook.net/en_US/fbevents.js');
            fbq('init', '<t t-esc="website.facebook_pixel_code"/>');
            fbq('track', 'PageView');
            </script>
            <noscript><img height="1" width="1" style="display:none"
            t-att-src="'https://www.facebook.com/tr?id=%s&amp;ev=PageView&amp;noscript=1' % (website.facebook_pixel_code)"
            /></noscript>
        </xpath>
    </template>

    <template id="facebook_pixel_product" inherit_id="website_sale.product" name="Track Add to cart">
      <xpath expr="//a[@id='add_to_cart']" position="before">
        <script type="text/javascript">
        document.addEventListener('DOMContentLoaded', (event) => {
            $('#add_to_cart').click(function() {
                fbq('track', 'AddToCart');
            });
        });
        </script>
      </xpath>    
    </template>

    <template id="facebook_pixel_cart" inherit_id="website_sale.cart" name="Facebook Pixel Initiate Checkout">
    <xpath expr="//a[@href='/shop/checkout?express=1']" position="before">
        <script type="text/javascript">
        document.addEventListener('DOMContentLoaded', (event) => {
            $('a[href*="/shop/checkout"]').click(function() {
                fbq('track', 'InitiateCheckout');
            });
        });
        </script>
    </xpath>    
    </template>

    <template id="facebook_pixel_address" inherit_id="website_sale.address" name=" Facebook Pixel Add payment info">
        <xpath expr="//a[@href='#']" position="before">
            <script type="text/javascript">
            document.addEventListener('DOMContentLoaded', (event) => {
                $('a[href*="#"]').click(function() {
                    fbq('track', 'AddPaymentInfo');
                });
            });
            </script>
        </xpath>    
    </template>

    <template id="facebook_pixel_payment_tokens_list" inherit_id="payment.payment_tokens_list" name="Track Purchase">
      <xpath expr="//button[@id='o_payment_form_pay']" position="before">
        <t t-set="pixel_order" t-value="website.sale_get_order()"/>
        <script type="text/javascript">
        document.addEventListener('DOMContentLoaded', (event) => {
            $('button#o_payment_form_pay').click(function() {
                fbq('track', 'Purchase', {currency: 'USD', value: <t t-esc="pixel_order.amount_total"/>});
            });
        });
        </script>
      </xpath>    
    </template>

    <template id="facebook_pixel_add_to_wishlist" inherit_id="website_sale_wishlist.add_to_wishlist" name="Facebook Pixel Add to wishlist">
        <xpath expr="//button" position="before">
            <script type="text/javascript">
            document.addEventListener('DOMContentLoaded', (event) => {
                $('button.o_add_wishlist').click(function() {
                    fbq('track', 'AddToWishlist');
                });
            });
            </script>
        </xpath>    
    </template>
    <template id="facebook_pixel_contactus_form" inherit_id="website_crm.contactus_form" name="Facebook Pixel track contact us">
        <xpath expr="//a" position="before">
            <script type="text/javascript">
            document.addEventListener('DOMContentLoaded', (event) => {
                $('a.o_website_form_send').click(function() {
                    fbq('track', 'Contact');
                });
            });
            </script>
        </xpath>    
    </template>
    <template id="facebook_pixel_search_products" inherit_id="website.website_search_box" name="Facebook Pixel track search products">
        <xpath expr="//div" position="before">
            <script type="text/javascript">
            document.addEventListener('DOMContentLoaded', (event) => {
                $('button.oe_search_button').click(function() {
                    fbq('track', 'Search');
                });
            });
            </script>
        </xpath>    
    </template>
</odoo>
