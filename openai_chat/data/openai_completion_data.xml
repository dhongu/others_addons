<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <record id="completion_chat" model="openai.completion">
            <field name="name">AI Chat</field>
            <field name="model_id" ref="mail.model_mail_channel"/>
            <field name="domain">[]</field>
            <field name="ai_model">text-davinci-003</field>
            <field name="max_tokens">300</field>
            <field name="n">1</field>
            <field name="temperature">1</field>
            <field name="frequency_penalty">0.5</field>
            <field name="presence_penalty">0</field>
            <field name="top_p">1</field>
            <field name="prompt_template">The following is a conversation with an AI assistant.</field>
        </record>
    </data>
</odoo>