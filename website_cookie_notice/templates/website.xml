<?xml version="1.0" encoding="utf-8"?>
<odoo>

<template id="loader" inherit_id="website.assets_frontend" name="Cookies script loader">
    <xpath expr=".">
        <script type="text/javascript" src="/website_cookie_notice/static/src/js/accept_cookies.js"/>
    </xpath>
</template>


<template id="message" name="Cookies notice">
    <div t-if="request and  not request.session.get('accepted_cookies')" id="website_cookie_notice" class="container-fluid cc-cookies alert alert-warning" role="alert">
        <div class="container">
            <div class="row">
                <small class="col-sm-10">Acest website foloseste cookie-uri. Vă rugăm consultați <a href="/legal/cookies">politica de cookies</a> pentru detalii. Navigând în continuare vă exprimați acordul asupra folosirii cookie-urilor.</small>
                <div class="col-sm-2 text-center">
                    <a class="btn btn-primary btn-sm" href="#">Da, sunt de acord</a>
                </div>
            </div>
        </div>
    </div>
</template>

<template id="cookiebanner" inherit_id="website.layout">
    <xpath expr="//header" position="before">
        <t t-call="website_cookie_notice.message"/>
    </xpath>
</template>
</odoo>
